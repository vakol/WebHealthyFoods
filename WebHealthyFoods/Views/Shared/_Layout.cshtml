<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink(Resources.Resource.HealthyFoodsNecessarily, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink(Resources.Resource.Home, "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink(Resources.Resource.PrepareFoods, "PrepareFoods", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink(Resources.Resource.FoodsIngredients, "FoodsIngredients", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li><a class="nav-link" href="https://www.permazahrada.cz/permakultura-jak-zacit/">@Resources.Resource.PermaZahrada &raquo;</a></li>
                    <li><a class="nav-link" href="https://wheaton-labs.com/">@Resources.Resource.WheatonLabs &raquo;</a></li>
                    <li>@Html.ActionLink(Resources.Resource.About, "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink(Resources.Resource.Contact, "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <!--<p class="nav navbar-text navbar-right">@Resources.Resource.LoggedUser:&nbsp;&nbsp;&nbsp; <strong>@User.Identity.Name</strong></p>-->
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Resources.Resource.HealthyFoodsCopyright</p>
        </footer>
        <!-- Cookies Warning Banner -->
        <div id="cookies-banner" class="d-none alert alert-info alert-dismissible fade show fixed-bottom mb-0 text-center" role="alert" style="z-index: 1050;">
            Povoluji těmto stránkám používat cookies k uložení informace o mém e-mailu do tohoto prohlížeče.
            <button type="button" class="btn btn-primary btn-sm ms-2" onclick="enableCookies(true)">Přijmout</button>
            <button type="button" class="btn btn-secondary btn-sm ms-2" onclick="enableCookies(false)">Odmítnout</button>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</htmllang="en">
